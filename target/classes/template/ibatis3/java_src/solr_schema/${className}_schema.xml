<#list table.columns as column>	 <!--${column.columnAlias}-->     <#if column.pk>				<field name="${column.columnNameFirstLower}" type="${column.simpleJavaType}" indexed="true" stored="true" required="true" multiValued="false" /> 	<#else>		<field name="${column.columnNameFirstLower}" type="${column.simpleJavaType}" indexed="true" stored="true" required="false" multiValued="false" /> 	</#if>        </#list>    <#list table.columns as column>    <#if column.pk>	 <uniqueKey>${column.columnNameFirstLower}</uniqueKey>        </#if>	</#list>